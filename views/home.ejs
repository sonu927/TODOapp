<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/home.css">
    <title><%= title%></title>
</head>
<body>
    <div id="container">
    <h1 id="heading">TODO App</h1>
    <hr>
    <form action="/create-task" method="POST">
        <div id="desc">
        <label for="description">Description</label>
        <input type="text" name="description" id="description" placeholder="What do you need to do?">
        </div>
        <hr>

        <div id="cat-date">
        <div id="cat">
        <label for="category">Category</label>
        <select name="category" id="category">
            <option disabled selected value="">Choose a category</option>
            <option value="personnel">Personnel</option>
            <option value="work">Work</option>
            <option value="school">School</option>
            <option value="cleaning">Cleaning</option>
            <option value="others">Others</option>
        </select>
        <i class="fa-solid fa-sort-down"></i>
        </div>
        
        <div id="date">
        <label for="dueDate">Due Date</label>
        <input type="date" name="dueDate" id="dueDate">
        </div>
        </div>
        <hr>

        <div id="submit-btn">
        <button type="submit"><i class="fa-solid fa-plus"></i>Add Task</button>
        </div>
        

    </form>


    <ul id="list">
        
        <% for(let i of tasks){%>
            <hr>
            <li>
                
                <input type="checkbox" id="checkbox">
                <div id="desc-date">
                <p class="desc"><%= i.description%></p>
                <div id="date-N-icon">
                <i class="fa-regular fa-calendar-days"></i>
                <p><%= i.date%></p>
                </div>
                </div>
                

                       
                <p class="category" id="<%=i.category%>"><%= i.category%></p>

                <div id="delete-btn">
                    <a href="/delete-task/?id=<%= i._id%>">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </div>
                
            </li>
            
        <%}%>
    </ul>
    </div>
</body>
</html>